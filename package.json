{
  "author": "Roland Milto (https://roland.milto.de/)",
  "contributors": [
    "Roland Milto (https://roland.milto.de/)"
  ],
  "homepage": "https://roland.milto.de/projekte/type-check#guards",
  "name": "@type-check/guards",
  "version": "2026.2.14-beta.0",
  "license": "GPL-3.0-or-later",
  "description": "@type-check/guards provides high-performance, security-focused runtime type checks following current 2026 best practices. Built for professional TypeScript, Node.js, and modern browser environments, this package delivers precise and efficient type-guard functions with active support and continuous development.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/roland-milto/type-check-guards.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/roland-milto/type-check-guards/issues"
  },
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    },
    "./as-object": {
      "types": "./dist/as-object.d.ts",
      "import": "./dist/as-object.mjs",
      "default": "./dist/as-object.mjs"
    },
    "./register-global": {
      "types": "./dist/register-global.d.ts",
      "import": "./dist/register-global.mjs",
      "default": "./dist/register-global.mjs"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": [
    "./dist/register-global.mjs"
  ],
  "devDependencies": {
    "@types/node": "^25.2.3",
    "openai": "^6.22.0",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "npm run build:cdn && npm run build:npm",
    "build:cdn": "tsdown --name CDN --clean --dts false --sourcemap false --minify && node -e \"fs.copyFileSync('./dist/index.mjs', './dist/index.min.mjs')\"",
    "build:npm": "tsdown src/index.ts src/as-object.ts src/register-global-object.ts --name NPM --dts true --sourcemap true --unbundle true --no-clean",
    "watch": "tsdown --name DEV --unbundle true --no-clean --watch",
    "prepublishOnly": "npm run build"
  },
  "tsdown": {
    "treeshake": false,
    "external": [
      "react",
      "react-dom",
      "vue",
      "/^lodash/",
      "/^@mui/"
    ]
  },
  "jsdelivr": "./dist/index.min.js",
  "unpkg": "./dist/index.min.js",
  "keywords": [
    "content validation",
    "data validation",
    "datatype validation",
    "design-time",
    "design-time testing",
    "guards",
    "runtime testing",
    "runtime type check",
    "runtime type checking",
    "runtime validation",
    "strict validation",
    "TDD",
    "test driven development",
    "testing",
    "testings",
    "tree shakable",
    "type check",
    "type-check",
    "type checking",
    "type-checking",
    "type checks",
    "type-checks",
    "type guard",
    "type guards",
    "type safety",
    "type-safety",
    "types",
    "typescript",
    "utility types",
    "utility-types",
    "validation",
    "validators",
    "value check",
    "value validation",
    "chai alternative",
    "jest alternative",
    "vitest alternative"
  ]
}
